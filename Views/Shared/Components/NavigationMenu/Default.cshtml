@model IEnumerable<string>
@* This is making it so I can link and do all of the buttons! Super uper cool *@
<a class="btn btn-block btn-outline-secondary" asp-action="Index" asp-controller="Home" asp-route-category="">Home</a>
<head>
    <link href="/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>

@foreach (string category in Model)
{
    <a class="btn btn-block btn-outline-secondary
       @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")"
       asp-action="Index" asp-controller="Home" asp-route-category="@category" asp-route-pageNum="1">@category</a>
}


